<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_35"
        android:layout_marginTop="@dimen/margin_35"
        android:text="Book Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="@dimen/margin_35"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="@dimen/margin_35"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:focusable="true"
            android:hint="Eg: Harry Potter 1"
            android:imeOptions="actionDone"
            android:padding="12dp"
            android:shadowColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_location"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/button_animated"
            android:textColor="#ffffff"
            android:text="Get Location" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_35"
        android:text="Book Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/editTextBookDes"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/margin_35"
        android:layout_marginRight="@dimen/margin_35"
        android:background="@drawable/edittext_background"
        android:hint="Eg: Harry potter is a great book"
        android:padding="12dp"
        android:textSize="15sp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_35"
        android:layout_marginTop="@dimen/margin_35"
        android:text="Book type"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/editTextBookType"
        android:layout_width="160dp"
        android:layout_height="51dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_background"
        android:hint="Eg: Fiction"
        android:padding="12dp"
        android:textSize="15sp"
        android:inputType="text" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="235dp"
        android:layout_marginLeft="@dimen/margin_35"
        android:layout_marginTop="-45dp"
        android:text="Pooja ID"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <EditText
        android:id="@+id/editTextBookAmount"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="-35dp"
        android:background="@drawable/edittext_background"
        android:hint="Amount"
        android:inputType="number"
        android:padding="12dp"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_animated"
            android:text="Submit" />

    </LinearLayout>
</LinearLayout>